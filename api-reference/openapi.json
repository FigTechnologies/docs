{
  "openapi": "3.1.0",
  "info": {
    "title": "Fig Finance Member API",
    "description": "Comprehensive API for Fig Finance members to manage their profiles, apply for loans, and handle repayments.",
    "version": "1.0.0",
    "contact": {
      "name": "Fig Finance Support",
      "email": "support@figfinance.me"
    }
  },
  "servers": [
    {
      "url": "https://dev-figfinance.cladfy.app",
      "description": "Production Server"
    }
  ],
  "components": {
    "securitySchemes": {
      "BranchKeyAuth": {
        "type": "apiKey",
        "in": "header",
        "name": "X-API-Key",
        "description": "Your public branch key"
      },
      "BranchSecretAuth": {
        "type": "apiKey",
        "in": "header",
        "name": "X-API-Secret",
        "description": "Your secret branch key"
      },
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "Member": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "member_no": {
            "type": "string"
          },
          "first_name": {
            "type": "string"
          },
          "last_name": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "status": {
            "type": "integer",
            "description": "0: Pending, 1: Active"
          }
        }
      },
      "LoanProduct": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "name": {
            "type": "string"
          },
          "min_amount": {
            "type": "number"
          },
          "max_amount": {
            "type": "number"
          },
          "interest_rate": {
            "type": "number"
          }
        }
      }
    }
  },
  "paths": {
    "/api/auth/register": {
      "post": {
        "summary": "Register Member",
        "description": "Register a new member account. Requires Branch Keys.",
        "security": [
          {
            "BranchKeyAuth": [],
            "BranchSecretAuth": []
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "first_name": {
                    "type": "string"
                  },
                  "last_name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  },
                  "password_confirmation": {
                    "type": "string"
                  },
                  "mobile": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Member created successfully"
          }
        }
      }
    },
    "/api/auth/login": {
      "post": {
        "summary": "Login",
        "description": "Authenticate and get JWT access token.",
        "security": [
          {
            "BranchKeyAuth": [],
            "BranchSecretAuth": []
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login successful"
          }
        }
      }
    },
    "/api/members/profile": {
      "get": {
        "summary": "Get Profile",
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Profile data retrieved"
          }
        }
      }
    },
    "/api/loans/products": {
      "get": {
        "summary": "List Loan Products",
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Products retrieved"
          }
        }
      }
    },
    "/api/loans/apply": {
      "post": {
        "summary": "Apply for Loan",
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "loan_product_id": {
                    "type": "integer"
                  },
                  "applied_amount": {
                    "type": "number"
                  },
                  "first_payment_date": {
                    "type": "string",
                    "format": "date"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Application submitted"
          }
        }
      }
    }
  }
}